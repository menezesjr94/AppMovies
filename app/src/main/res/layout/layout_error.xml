<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_top_medium"
        android:layout_marginTop="150dp"
        android:text="@string/text_error"
        android:textSize="@dimen/text_h5_headline"
        android:textColor="@color/white"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_retry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top_medium"
        android:textColor="@color/white"
        android:text="@string/retry"
        android:textAllCaps="false"
        android:backgroundTint="@color/purple_200"
        app:layout_constraintEnd_toEndOf="@+id/tv_error"
        app:layout_constraintStart_toStartOf="@+id/tv_error"
        app:layout_constraintTop_toBottomOf="@+id/tv_error" />


</androidx.constraintlayout.widget.ConstraintLayout>